{
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "types": ["node", "jest"],
    "paths": {
      "@frontend/app/*": ["app/src/*"],
      "@frontend/core/*": ["core/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "files": [],
  "references": [
    {
      "path": "packages/app"
    }
  ]
}
